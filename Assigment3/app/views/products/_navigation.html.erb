<nav class="navigation">
    <ul class="table-content">
        <li class>
            <%= link_to 'HOME', root_path, class: 'nav-btn' %>
        </li>
        <p class='point'></p>
        <li>
            <%= link_to 'ABOUT', root_path, class: 'nav-btn' %>
        </li>
        <p class='point'></p>
        <li>
            <% if user_signed_in? && current_user.admin? %>
                <%= link_to 'SERVICE', new_admin_product_path, class: 'nav-btn' %>
            <% else %>
                <%= link_to 'SERVICE', root_path, class: 'nav-btn' %>
            <% end %>
        </li>
        <p class='point'></p>
        <li>
            <%= link_to 'BLOG', root_path, class: 'nav-btn' %>
        </li>
        <p class='point'></p>
        <li>
            <%= link_to 'CONTACTS', root_path, class: 'nav-btn' %>
        </li>
        <% unless user_signed_in? %>
            <p class='point'></p>
            <li>
                <%= link_to 'LOG IN',  new_user_session_path, class: 'nav-btn' %>
            </li>
            <p class='point'></p>
            <li>
                <%= link_to 'SIGN UP', new_user_registration_path, class: 'nav-btn' %>
            </li>
        <% else %>
             <% if current_user.admin? %>
                <p class='point'></p>
                <li>
                    <%= link_to 'ADMIN DASHBOARD', admin_orders_path, class: 'nav-btn' %>
                </li>
            <% else %>
                <p class='point'></p>
                <li>
                    <%= link_to 'MY ORDERS', orders_path, class: 'nav-btn' %>
                </li>
            <% end %>
            <p class='point'></p>
            <li class="account-dropdown">
                <button class="dropdown-toggle">ACCOUNT</button>
                    <div class="dropdown-menu">
                    <p class="username-display"><%= current_user.username %></p>
                    <%= link_to "Cart", shopping_cart_path, class: "dropdown-item" %>
                    <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item logout-btn", form: { style: "display:inline;" } %>
                </div>
            </li>

        <% end %>
    </ul>
