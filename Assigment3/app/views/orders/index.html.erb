<% content_for :styles do %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload", media: "all" %>
<% end %>

<div class="container mx-auto p-4 sm:p-8">
    <%= link_to "Back", root_path, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
    <h1 class="text-3xl text-white font-extrabold mb-8 text-center drop-shadow-lg">
    Orders Overview
    </h1>

    <% if current_user&.admin? %>
    <% @orders.group_by(&:user).each do |user, orders| %>
        <%= render partial: "orders/user_orders", locals: { user: user, orders: orders } %>
    <% end %>
    <% else %>
    <%= render partial: "orders/user_orders", locals: { user: current_user, orders: @orders } %>
    <% end %>
</div>
